{
  "name": "employee-tracking-backend",
  "version": "1.0.0",
  "description": "Backend API for Employee Tracking System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "setup": "npm install && node scripts/setup.js",
    "db:reset": "npx sequelize-cli db:drop && npx sequelize-cli db:create && npx sequelize-cli db:migrate",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:seed": "npx sequelize-cli db:seed:all",
    "migrate-data": "node scripts/migrate-data.js",
    "setup-db": "node scripts/setup-database.js",
    "reset-db": "node scripts/setup-database.js",
    "test-db": "node scripts/test-connection.js"
  },
  "keywords": [
    "employee",
    "tracking",
    "attendance",
    "location",
    "api",
    "node.js",
    "express",
    "postgresql"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-fetch": "^2.7.0",
    "nodemailer": "^7.0.9",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "eslint": "^8.46.0",
    "eslint-config-node": "^1.6.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "sequelize-cli": "^6.6.3",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/employee-tracking-system.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/employee-tracking-system/issues"
  },
  "homepage": "https://github.com/yourusername/employee-tracking-system#readme"
